void hollowPyramid ( int n );

int main()
{    
    int n;

    scanf("%d", &n);
    hollowPyramid ( n );

    return 0;
}


void hollowPyramid( int n )
{
	int i,j,k; 
	for (i=1;i<n;i++)
	{
		for( j=1;j<=n-i;j++)
		printf("%c",' ');
		printf("%d",i);
		for(k=1;k<=2*i-3;k++)
		printf("%c",' ');
        if(i!=1)
		printf("%d",i);
		printf("\n");
		
	}
	for(i=1;i<=2*n-1;i++)
	printf("%d",n);
	
}
